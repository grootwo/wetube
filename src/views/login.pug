extends base

block contents
    span=errorMsg
    form(method="POST")
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Login")
        a(href="https://github.com/login/oauth/authorize?client_id=8af1dc42b0da2e13e0a2&allow_signup=false") Continue with Github &rarr;
    div 
        span Don't you have an account? 
        a(href="/join") Join now &rarr; 