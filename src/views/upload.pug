extends base.pug

block contents 
    if errorMsg 
        span=errorMsg
    div
        video#preview
        button#recordBtn Start record
    form(method="POST", action="/videos/upload", enctype="multipart/form-data")
        input(name="video", type="file", accept="video/*", required)
        input(name="title", type="text", placeholder="Title", required, maxlength=30)
        input(name="description", type="text", placeholder="Description", required, maxlength=100)
        input(name="hashtags", type="text", placeholder="Hashtags, separated by comma", required)
        input(type="submit", value="Upload")

block scripts 
    script(src="/static/js/videoRecorder.js") 